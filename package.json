{
  "name": "satisfactory-server-status",
  "version": "0.0.1",
  "description": "A real-time server status monitor for Satisfactory dedicated servers that leverages UDP polling and WebSocket connections for efficient state tracking.",
  "author": "Augusto Blomer",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "keywords": [
    "node",
    "typescript"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "dgram": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.21.0",
    "pretty-error": "^4.0.0",
    "socket.io": "^4.7.5",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "cors": "^2.8.5",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts,js,json}": [
      "prettier --config .prettierrc --write './src/**/*.ts'",
      "tslint -p tsconfig.json -c tslint.json",
      "npm run tests",
      "git add"
    ]
  }
}
